<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobact1.flyoutxaml"
             Title="flyoutxaml">

    <!-- Flyout Menu -->
    <FlyoutPage.Flyout>
        <ContentPage Title="Navigation">
            <VerticalStackLayout>
                <Label Text="Menu"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontSize="20"
                       FontAttributes="Bold"/>
            </VerticalStackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

    <!-- Detail with Tabs -->
    <FlyoutPage.Detail>
        <TabbedPage>
            <ContentPage Title="Home">
                <VerticalStackLayout>
                    <Image Source="home.png"
                           HeightRequest="150"
                           Aspect="AspectFill"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                    <Label Text=".NET MAUI"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     FontSize="40"
                     FontAttributes="Bold"
                     TextColor="DarkViolet"/>

                    <Label Text="This application is made by .net maui"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    FontSize="20"
                    TextColor="Black"/>
                    
                </VerticalStackLayout>
            </ContentPage>

            <ContentPage Title="Profile">
                <VerticalStackLayout BackgroundColor="AliceBlue">
                    <Image Source="profile.png"
                    HeightRequest="200"
                    WidthRequest="200"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>

                    <Label Text="Vincent Rupita"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    FontSize="20"
                    TextColor="Black"/>

                    <Label Text="23-9005199"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    FontSize="20"
                    TextColor="Black"/>

                    <Label Text="BSIT"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    FontSize="20"
                    TextColor="Black"/>
                </VerticalStackLayout>
            </ContentPage>

            <ContentPage Title="About">
                <VerticalStackLayout>
                    <Label Text="FIRST ACTIVITY IN MOBAPPLICATION"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    HorizontalTextAlignment="Center"
                    FontSize="35"
                    TextColor="Black"/>

                    <Label Text="Contains Different set of pages in .NET MAUI"
                    HorizontalTextAlignment="Center"
                    FontSize="25"
                    TextColor="Black"/>
                </VerticalStackLayout>
            </ContentPage>
        </TabbedPage>
    </FlyoutPage.Detail>

</FlyoutPage>